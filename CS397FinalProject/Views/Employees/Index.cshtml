@model IEnumerable<CS397FinalProject.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{

    <p>
        @Html.DropDownList("ddlAttributes")

        Search: @Html.TextBox("SearchValue")
        <input type="submit" value="Search"/>
    </p>

    @Html.ActionLink("ddlNames", "ddlEdit")
}



<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Last Name","Index", new { sortOrder = "LastName" })
        </th>
        <th>
            @Html.ActionLink("First Name", "Index", new { sortOrder = "FirstName" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salary)
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
            
        </th>
        <th>
            @Html.ActionLink("Department", "Index", new { sortOrder = "Department" })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.location)
        </th>
        <th>
            @Html.ActionLink("Performance", "Index", new { sortOrder = "Performance" })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.performance)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeId }) |
                @Html.ActionLink("Details", "Details", new { id = item.EmployeeId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId })
            </td>
        </tr>
    }

</table>
